@model PostEF.Models.Post
@{
    ViewBag.Title = "EditAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Nuevo Post</h2>
<div class="container">
    @using (Html.BeginForm("EditAdd", "Post"))
    {
        @Html.HiddenFor(m => m.IdP)
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Content)
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, DateTime.Now.ToString("d"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, DateTime.Now.ToString("d"), new { @class = "form-control" })
        </div>

        <input type="submit" value="Guardar">
    }
</div>



